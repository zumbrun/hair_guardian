<h1>Caps</h1>

<table>
  <thead>
    <tr>
      <th>Serial number</th>
      <th>Circumference</th>
      <th>Ear ear top</th>
      <th>Ear ear base</th>
      <th>Nose nape</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caps.each do |cap| %>
      <tr>
        <td><%= cap.serial_number %></td>
        <td><%= cap.circumference %></td>
        <td><%= cap.ear_ear_top %></td>
        <td><%= cap.ear_ear_base %></td>
        <td><%= cap.nose_nape %></td>
        <td><%= link_to 'Show', cap %></td>
        <td><%= link_to 'Edit', edit_cap_path(cap) %></td>
        <td><%= link_to 'Destroy', cap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cap', new_cap_path %>
